{
  "name": "mikusmeikulis/php-referrals",
  "description": "PHP form with external API integration",
  "require": {
    "php": ">=7.4",
    "vlucas/phpdotenv": "^5.6"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "dev": "php -S localhost:8080 -t public",
    "kill-ports": "php -r \"exec('kill -9 $(lsof -t -i:8000,8080) 2>/dev/null || true');\""
  }
}
